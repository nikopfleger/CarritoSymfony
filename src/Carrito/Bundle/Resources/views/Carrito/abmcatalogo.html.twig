{% extends "CarritoBundle:Carrito:layout.html.twig" %}
{% block head %}
   <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    	 <div class="container-fluid">
     		<div class="navbar-header">
     
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="{{ path("abm_cargar_catalogo") }}">Catalogo</a></li>
        <li class="active"><a href="#">ABM</a></li>
        </ul>
    </div>
  </div>
  </div> 
  </nav>


{% block titulo %}
<title> ABM Catalogo </title>
{% endblock %}
{% endblock %}

{% block body %}

<div class="formulario">
<input type="hidden" id="idArticulo" value="">
<input type="text" class="form-control" id="nombreArticulo" placeholder="Ingresar articulo."><br>
<input type="number" class="form-control"  id="precioArticulo" placeholder="Ingresar precio." min=0><br>
<input type="number" class="form-control"  id="cantidad" placeholder="Ingresar cantidad." min=0><br>
<button type="submit" class="btn btn-success" id="btnNuevo">Nuevo articulo</button>
<button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
</div>

<div class="divABM">
<table id="abmCatalogo" class="tablaABM">
<thead>
<tr>
<th>id</th>
<th>Nombre</th>
<th>Precio</th>
<th>Cantidad</th>
<th>Acciones</th>
</tr>
</thead>
<tbody>

{% endblock %}

{% block javascript %}
<script src=" {{ asset("bundles/carrito/js/abm.js") }}"></script>
<script type="text/javascript">
	$(document).ready(function(e) {

		var unABM = new ABM();
		unABM.table = {{ tablaArt|raw }} ;
		unABM.row = "";
		unABM.oTable = null;
		unABM.url.actualizar = "{{ path("abm_actualizar_catalogo") }}";
		unABM.url.eliminar = "{{ path("abm_eliminar_catalogo") }}";
		unABM.init();

	});
</script>
{% endblock %}

